@model AsteelProjectManagement.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<style>
    /* Styles spécifiques pour la page de login */
    body {
        background-color: rgb(193, 189, 186); /* Background color */
        font-family: Arial, sans-serif; /* Font style */
    }

    .login-container {
        display: flex;
        max-width: 900px; /* Increase width to accommodate image */
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        height:450px;
    }
    .form-container{
        width:400px;
    }

        .login-container h2 {
            color: #1ab188;
            text-align: center;
            margin-bottom: 20px;
            margin-left: 350px;
            font-weight: bold; /* Make the text bold */
            flex-basis: 100%;
        }

    .login-form {
        display: flex;
        flex-direction: column;
        flex: 1; /* Make the form take up the remaining space */
        margin-top:60px;
        margin-left:60px;
    }

        .login-form .form-group {
            margin-bottom: 15px;
        }

        .login-form .form-control {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

            .login-form .form-control:focus {
                border-color: #1ab188;
                box-shadow: 0 0 5px rgba(26, 177, 136, 0.5);
            }

    .btn-login {
        background-color: #1ab188;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-login:hover {
            background-color: rgb(14, 129, 116);
        }

    .text-danger {
        color: #dc3545;
    }

    .image-container {
        margin-left: 20px;
        flex: 1; /* Allow image container to take up space */
        display: flex;
        align-items: center; /* Center the image vertically */
        justify-content: center; /* Center the image horizontally */
    }

        .image-container img {
            max-width: 100%;
            border-radius: 10px;
        }
</style>

<div class="login-container">
    <div class="form-container">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username", required = "required" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-check">
                <div>
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label ml-2" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary btn-login">Login</button>
                </div>
            </div>
        }
    </div>
    <div class="image-container">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSGUFJzNIaWcWl0TIG6nRpKRcNpxfx0sMsy9g&s" alt="Login Image">
    </div>
</div>
