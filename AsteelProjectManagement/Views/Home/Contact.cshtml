@model IEnumerable<AsteelProjectManagement.Models.Notifications>

@{
    ViewBag.Title = "Notifications";
}
<style>
    /* Style pour les notifications lues */
    /* Style pour les notifications lues */

    h2 {
        text-align: center;
        color: #1ab188;
        margin-bottom: 20px;
    }
    .read {
        background-color: #f5f5f5; /* Gris très clair pour les notifications lues */
        color: #9e9e9e; /* Gris moyen pour le texte */
    }

    /* Style pour les notifications non lues */
    .unread {
        background-color: #ffffff; /* Blanc pour les notifications non lues */
        color: #212121; /* Gris foncé pour le texte */
        font-weight: bold; /* Texte en gras pour les notifications non lues */
    }
    a {
        color: floralwhite; /* Couleur bleue personnalisée pour les liens */
        text-decoration: none; /* Supprime le soulignement par défaut des liens */
    }

        /* Style pour les liens lors du survol */
        a:hover {
            color: floralwhite; /* Couleur bleue plus foncée lors du survol */
            text-decoration: None; /* Optionnel : ajouter un soulignement lors du survol */
        }
 

</style>
<h2>Notifications</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Date</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr class="@(item.IsRead ?? false ? "read" : "unread")">
    <td>@Html.DisplayFor(modelItem => item.Message)</td>
    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
    <td>@Html.DisplayFor(modelItem => item.Type)</td>
    <td>


        @if (item.IsRead == false) // Affiche le bouton seulement si la notification n'est pas lue
        {<button class=" btn btn-primary">
    @Html.ActionLink("Mark as read", "MarkAsRead", new { id = item.NotificationID })
</button>  }
          
        </td>
    <td>
        <button class=" btn btn-success">
            @Html.ActionLink("Validate", "Validate", "Modifications", new { id = item.NotificationID }, null )
        </button>
    </td>
</tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $('#notification').addClass('show');
        }, 2000);
    });
</script>
