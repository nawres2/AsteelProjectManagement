@model IEnumerable<AsteelProjectManagement.Models.Versions>
@{
    var projectId = ViewBag.ProjectID;
}

<div class="container">
    <fieldset class="styled-fieldset">
        <legend class="styled-legend">Version Details for Project ID: @projectId</legend>
        @if (Model != null && Model.Any())
        {
            foreach (var version in Model)
            {
                <div class="row version-details">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="styled-label">Project Name</label>
                            <p class="form-control-static styled-paragraph">@version.Projects.ProjectName</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Source Path</label>
                            <p class="form-control-static styled-paragraph">@version.SourcePath</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Destination Path</label>
                            <p class="form-control-static styled-paragraph">@version.DestinationPath</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Release Date</label>
                            <p class="form-control-static styled-paragraph">@version.ReleaseDate</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="styled-label">Created By</label>
                            <p class="form-control-static styled-paragraph">@version.Users.Username</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Notes</label>
                            <p class="form-control-static styled-paragraph">@version.Notes</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Modified By</label>
                            <p class="form-control-static styled-paragraph">@version.Users.Username</p>
                        </div>
                        <div class="form-group">
                            <label class="styled-label">Modified Date</label>
                            <p class="form-control-static styled-paragraph">@version.ModifiedDate</p>
                        </div>
                    </div>
                </div>
                <hr class="styled-hr" />
            }
        }
        else
        {
            <p class="no-versions">No versions available for Project ID: @projectId.</p>
        }
    </fieldset>
</div>

<style>
    .container {
        margin: 20px;
    }

    .styled-fieldset {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .styled-legend {
        font-size: 1.5em;
        font-weight: bold;
        color: #1ab188;
        padding: 0 10px;
    }

    .version-details {
        margin-bottom: 20px;
    }

    .styled-label {
        font-weight: bold;
        color: #333;
    }

    .styled-paragraph {
        font-size: 1em;
        color: #666;
        margin-bottom: 10px;
    }

    .styled-hr {
        border: 0;
        border-top: 1px solid #ddd;
        margin: 20px 0;
    }

    .no-versions {
        font-size: 1.2em;
        color: #999;
        text-align: center;
    }
</style>
