
@model AsteelProjectManagement.Models.StepperViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stepper Example</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .containeeer {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .container:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

        .stepper {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            padding: 0;
            list-style: none;
        }

        .step {
            text-align: center;
            flex: 1;
            position: relative;
            cursor: pointer;
        }

            .step .step-content {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .step .step-title {
                font-size: 14px;
                color: #6c757d;
                margin-bottom: 5px;
            }

            .step:not(:last-child)::after {
                content: '';
                height: 2px;
                background-color: #e0e0e0;
                position: absolute;
                top: 15px;
                left: 61%;
                right: -39%;
                z-index: 1;
            }

        .step-circle {
            position: relative;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            background-color: #1ab188;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .step-check {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .step.done .step-check {
            display: flex;
        }

        .step.done .step-circle {
            background-color: #fff;
            color: #fff;
            display: flex;
        }

        .step.active .step-circle {
            background-color: #1ab188;
        }

        .step .step-title {
            margin-top: 10px;
            font-size: 16px;
            color: #1ab188;
        }

        .step.active .step-title {
            color: #1ab188;
        }

        .step-content .step-pane {
            display: none;
        }

            .step-content .step-pane.active {
                display: block;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #565e64;
                border-color: #4e555b;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        form {
            margin-top: 20px;
        }

        h3 {
            text-align: center;
            color: #1ab188;
            margin-bottom: 20px;
        }

        .step-check {
            display: none;
            color: green;
            font-size: 1.2em;
            margin-left: 10px;
            position: relative;
        }

        .step.done .step-check {
            display: inline-block;
        }

        img {
            height: 40px;
            width: 40px;
            margin-left: -20px;
            margin-top: -10px;
        }
    </style>
</head>
<body>

    <div class="containeeer mt-5">
        <ul class="stepper">
            <li class="step" data-step="1">
                <div class="step-content">
                    <span class="step-circle">
                        1
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Project</span>
                </div>
            </li>
            <li class="step" data-step="2">
                <div class="step-content">
                    <span class="step-circle">
                        2
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Link</span>
                </div>
            </li>
            <li class="step" data-step="3">
                <div class="step-content">
                    <span class="step-circle">
                        3
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Version</span>
                </div>
            </li>
            <li class="step" data-step="4">
                <div class="step-content">
                    <span class="step-circle">
                        4
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Attachment</span>
                </div>
            </li>
            <li class="step" data-step="5">
                <div class="step-content">
                    <span class="step-circle">
                        5
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Comment</span>
                </div>
            </li>
            <li class="step" data-step="6">
                <div class="step-content">
                    <span class="step-circle">
                        6
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Finish</span>
                </div>
            </li>
        </ul>

        <div class="step-content">
            <div class="step-pane active" data-step="1">
                <h3>Create Project</h3>
                <form id="step1-form">
                    @Html.Partial("~/Views/Projects/Create.cshtml", Model.Project)
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="2">
                <h3>Create Link</h3>
                <form id="step2-form">
                    @Html.Partial("~/Views/Projects/AddLink.cshtml", Model.Link)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="3">
                <h3>Create Version</h3>
                <form id="step3-form">
                    @Html.Partial("~/Views/Versions/Create.cshtml", Model.Version)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="4">
                <h3>Create Attachment</h3>
                <form id="step4-form">
                    @Html.Partial("~/Views/Projects/AddAttachment.cshtml", Model.Attachment)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="5">
                <h3>Create Comment</h3>
                <form id="step5-form">
                    @Html.Partial("~/Views/Comments/Comments.cshtml", Model.Comment)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="6">
                <h3>Finish</h3>
                <form id="step6-form">
                    <!-- Add any final steps or confirmations here -->
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-success" onclick="submitForms()">Finish</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
$(document).ready(function () {
    var stepper = $('.stepper');
    var stepContents = $('.step-content .step-pane');

    $.fn.activateStep = function (stepNumber, callback) {
        var step = stepper.find('.step').filter('[data-step="' + stepNumber + '"]');
        step.addClass('active').siblings().removeClass('active');
        stepContents.removeClass('active').filter('[data-step="' + stepNumber + '"]').addClass('active');
        if (callback) callback();
    };

    $.fn.deactivateStep = function (callback) {
        var step = $(this);
        step.removeClass('active').addClass('done');
        if (callback) callback();
    };

    function validateStep(stepNumber) {
        var form = $('#step' + stepNumber + '-form');
        return form[0].checkValidity(); // Utiliser la validation HTML5
    }

    function goToStep(stepNumber) {
        var currentStep = stepper.find('.step.active');
        if (currentStep.data('step') === stepNumber) {
            return; // Ne fais rien si tu es déjà sur cette étape
        }
        if (validateStep(currentStep.data('step'))) {
            currentStep.deactivateStep(function () {
                stepper.find('.step').filter('[data-step="' + stepNumber + '"]').activateStep(stepNumber);
            });
        } else {
            alert('Please complete the required fields.');
        }
    }

    stepper.find('.step').each(function (index) {
        if (index === 0) {
            $(this).activateStep(1);
        } else {
            $(this).removeClass('active');
        }
    });

    stepper.on('click', '.step', function () {
        var stepNumber = $(this).data('step');
        goToStep(stepNumber);
    });

    stepContents.on('click', '.next-step', function () {
        var activeStep = stepper.find('.step.active');
        var stepNumber = activeStep.data('step');
        if (validateStep(stepNumber)) {
            var nextStep = activeStep.next('.step');
            if (nextStep.length > 0) {
                activeStep.deactivateStep(function () {
                    nextStep.activateStep(nextStep.data('step'));
                });
            }
        } else {
            alert('Please complete the required fields.');
        }
    });

    stepContents.on('click', '.previous-step', function () {
        var activeStep = stepper.find('.step.active');
        var prevStep = activeStep.prev('.step');
        if (prevStep.length > 0) {
            activeStep.deactivateStep(function () {
                prevStep.activateStep(prevStep.data('step'));
            });
        }
    });

    stepContents.on('click', '.finish-step', function () {
        var formData = new FormData();
        $('#step1-form, #step2-form, #step3-form, #step4-form, #step5-form').each(function() {
            $(this).find('input, select, textarea').each(function() {
                formData.append(this.name, $(this).val());
            });
        });

        $.ajax({
            type: 'POST',
            url: '@Url.Action("Steppersave", "Projects")',
            data: formData,
            processData: false, 
            contentType: false, // Important pour FormData
            success: function (response) {
                if (response.success) {
                    window.location.href = '@Url.Action("Index", "Projects")';
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('An error occurred while saving the data.');
            }
        });
    });

    // Fonction de soumission des formulaires (vérifiez si nécessaire)
    function submitForms() {
        $('#step1-form').submit();
        $('#step2-form').submit();
        $('#step3-form').submit();
        $('#step4-form').submit();
        $('#step5-form').submit();
    }
});

    </script>
</body>
</html>
