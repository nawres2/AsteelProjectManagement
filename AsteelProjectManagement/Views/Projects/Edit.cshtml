

@model AsteelProjectManagement.Models.StepperViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stepper Example</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .containeeerrrrr {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .containeeerrrrr²:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

        .stepper {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            padding: 0;
            list-style: none;
        }

        .step {
            text-align: center;
            flex: 1;
            position: relative;
            cursor: pointer;
        }

            .step .step-content {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .step .step-title {
                font-size: 14px;
                color: #6c757d;
                margin-bottom: 5px;
            }

            .step:not(:last-child)::after {
                content: '';
                height: 2px;
                background-color: #e0e0e0;
                position: absolute;
                top: 15px;
                left: 61%;
                right: -39%;
                z-index: 1;
            }

        .step-circle {
            position: relative;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            background-color: #1ab188;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .step-check {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .step.done .step-check {
            display: flex;
        }

        .step.done .step-circle {
            background-color: #fff;
            color: #fff;
            display: flex;
        }

        .step.active .step-circle {
            background-color: #1ab188;
        }

        .step .step-title {
            margin-top: 10px;
            font-size: 16px;
            color: #1ab188;
        }

        .step.active .step-title {
            color: #1ab188;
        }

        .step-content .step-pane {
            display: none;
        }

            .step-content .step-pane.active {
                display: block;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #565e64;
                border-color: #4e555b;
            }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        form {
            margin-top: 20px;
        }

        h3 {
            text-align: center;
            color: #1ab188;
            margin-bottom: 20px;
        }

        .step-check {
            display: none;
            color: green;
            font-size: 1.2em;
            margin-left: 10px;
            position: relative;
        }

        .step.done .step-check {
            display: inline-block;
        }

        img {
            height: 40px;
            width: 40px;
            margin-left: -20px;
            margin-top: -10px;
        }
        .btn-primary {
            background-color: #1ab188;
            border-color: #1ab188;
        }
    </style>
</head>
<body>

    <div class="containeeerrrrr mt-5">
        <ul class="stepper">
            <li class="step" data-step="1">
                <div class="step-content">
                    <span class="step-circle">
                        1
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Project</span>
                </div>
            </li>
            <li class="step" data-step="2">
                <div class="step-content">
                    <span class="step-circle">
                        2
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Link</span>
                </div>
            </li>
            <li class="step" data-step="3">
                <div class="step-content">
                    <span class="step-circle">
                        3
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Version</span>
                </div>
            </li>
            <li class="step" data-step="4">
                <div class="step-content">
                    <span class="step-circle">
                        4
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Attachment</span>
                </div>
            </li>
            <li class="step" data-step="5">
                <div class="step-content">
                    <span class="step-circle">
                        5
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Comment</span>
                </div>
            </li>
            <li class="step" data-step="6">
                <div class="step-content">
                    <span class="step-circle">
                        6
                        <span class="step-check">
                            <img src="https://cdn-icons-png.flaticon.com/512/150/150499.png" />
                        </span>
                    </span>
                    <span class="step-title">Finish</span>
                </div>
            </li>
        </ul>

        <div class="step-content">
            <div class="step-pane active" data-step="1">
                <h3>Edit Project</h3>
                <form id="step1-form">
                    @Html.Partial("~/Views/Projects/CreateEdit.cshtml", Model.Project)
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="2">
                <h3>Edit Link</h3>
                <form id="step2-form">
                    @Html.Partial("~/Views/Projects/AddLinkEdit.cshtml", Model.Link)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="3">
                <h3>Edit Version</h3>
                <form id="step3-form">
                    @Html.Partial("~/Views/Versions/Edit.cshtml", Model.Version)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="4">
                <h3>Edit Attachment</h3>
                <form id="step4-form">
                    @Html.Partial("~/Views/Projects/AddAttachmentEdit.cshtml", Model.Attachment)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="5">
                <h3>Edit Comment</h3>
                <form id="step5-form">
                    @Html.Partial("~/Views/Comments/Edit.cshtml", Model.Comment)
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-primary next-step">Continue</button>
                </form>
            </div>
            <div class="step-pane" data-step="6">
                <h3>Finish</h3>
                <form id="step6-form">
                    <!-- Add any final steps or confirmations here -->
                    <button type="button" class="btn btn-secondary previous-step">Back</button>
                    <button type="button" class="btn btn-success finish-step" onclick="finalizeUpdateProcess()">Finish</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

   <script>
       $(document).ready(function () {
           let projectId; // Variable to store the project ID

           // Function to show the current step in the stepper
           function showStep(stepNumber) {
               $('.step-pane').removeClass('active');
               $('[data-step=' + stepNumber + ']').addClass('active');
           }

           // Handle next step
           $('.next-step').click(function () {
               const currentStep = $(this).closest('.step-pane').data('step');
               const nextStep = currentStep + 1;

               // Validate the current step form before proceeding
               if (!validateStep(currentStep)) {
                   alert('Please fill in all required fields before proceeding.');
                   return;
               }

               // Call different AJAX functions based on the current step
               switch (currentStep) {
                   case 1:
                       CreateEdit();
                       break;
                   case 2:
                       updateLink();
                       break;
                   case 3:
                       updateVersion();
                       break;
                   case 4:
                       updateAttachment();
                       break;
                   case 5:
                       updateComment();
                       break;
               }

               showStep(nextStep);
           });

           // Handle previous step
           $('.previous-step').click(function () {
               const currentStep = $(this).closest('.step-pane').data('step');
               const prevStep = currentStep - 1;

               showStep(prevStep);
           });

           // Validate the current step form using HTML5 form validation
           function validateStep(stepNumber) {
               var form = $('#step' + stepNumber + '-form');
               return form[0].checkValidity(); // HTML5 validation
           }

           // AJAX request to create or edit the project
           function CreateEdit(project) {
               $.ajax({
                   url: '/Projects/CreateEdit',
                   type: 'POST',
                   data: {
                       ProjectID: $("#ProjectID").val(),
                       ProjectName: $("#ProjectName").val(),
                       Description: $("#Description").val(),
                       Status: $("#Status").val(),
                       Priority: $("#Priority").val()
                   },
                   success: function (data) { // Use 'data' instead of 'response'
                       if (data.success) { // Check 'data.success' instead of 'response.success'
                           projectId = data.projectId; // Store the ProjectID returned by the server

                           console.log('Project updated successfully');
                           alert('Project updated successfully');
                           // Optionally, redirect or update UI elements
                           // window.location.href = '/Projects/Index'; // Redirect to a different page
                       } else {
                           console.error('Error updating project:', data.message);
                           alert('Error updating project: ' + data.message);
                       }
                   },
                   error: function (xhr, status, error) {
                       console.error('AJAX error:', error);
                       console.log('Status:', status);
                       console.log('Response Text:', xhr.responseText);
                       console.log('XHR Status:', xhr.status);
                       console.log('XHR Status Text:', xhr.statusText);

                       alert('An error occurred: ' + xhr.responseText + '\nStatus: ' + xhr.status + ' (' + xhr.statusText + ')');
                   }
               });
           }


               function updateLink(link, projectId) {
                   $.ajax({
                       url: '/Projects/UpdateStep2',
                       type: 'POST',
                       data: { ...link, projectId: projectId },
                       success: function (response) {
                           if (response.success) {
                               console.log('Link updated successfully');
                               // Handle success (e.g., update UI, show success message)
                           } else {
                               console.error('Error updating link:', response.message);
                               // Handle error (e.g., show error message)
                           }
                       },
                       error: function (xhr, status, error) {
                           console.error('AJAX error:', error);
                           // Handle AJAX error
                       }
                   });
               }

               function updateVersion(version, projectId) {
                   $.ajax({
                       url: '/Projects/UpdateStep3',
                       type: 'POST',
                       data: { ...version, projectId: projectId },
                       success: function (response) {
                           if (response.success) {
                               console.log('Version updated successfully');
                               // Handle success (e.g., update UI, show success message)
                           } else {
                               console.error('Error updating version:', response.message);
                               // Handle error (e.g., show error message)
                           }
                       },
                       error: function (xhr, status, error) {
                           console.error('AJAX error:', error);
                           // Handle AJAX error
                       }
                   });
               }
               function updateAttachment(attachment, projectId) {
                   $.ajax({
                       url: '/Projects/UpdateStep4',
                       type: 'POST',
                       data: { ...attachment, projectId: projectId },
                       success: function (response) {
                           if (response.success) {
                               console.log('Attachment updated successfully');
                               // Handle success (e.g., update UI, show success message)
                           } else {
                               console.error('Error updating attachment:', response.message);
                               // Handle error (e.g., show error message)
                           }
                       },
                       error: function (xhr, status, error) {
                           console.error('AJAX error:', error);
                           // Handle AJAX error
                       }
                   });
               }
               function updateComment(comment, projectId) {
                   $.ajax({
                       url: '/Projects/UpdateStep5',
                       type: 'POST',
                       data: { ...comment, projectId: projectId },
                       success: function (response) {
                           if (response.success) {
                               console.log('Comment updated successfully');
                               // Handle success (e.g., update UI, show success message)
                           } else {
                               console.error('Error updating comment:', response.message);
                               // Handle error (e.g., show error message)
                           }
                       },
                       error: function (xhr, status, error) {
                           console.error('AJAX error:', error);
                           // Handle AJAX error
                       }
                   });
               }

               function finalizeUpdateProcess(projectId) {
                   $.ajax({
                       url: '/Projects/FinalizeUpdateProcess',
                       type: 'POST',
                       data: { projectId: projectId },
                       success: function (response) {
                           if (response.success) {
                               console.log('Update process finalized successfully');
                               // Handle success (e.g., redirect, show success message)
                           } else {
                               console.error('Error finalizing update process:', response.message);
                               // Handle error (e.g., show error message)
                           }
                       },
                       error: function (xhr, status, error) {
                           console.error('AJAX error:', error);
                           // Handle AJAX error
                       }
                   });
               }





           $(".previous-step").click(function () {
               var currentStep = $(this).closest(".step-pane").data("step");
               var previousStep = currentStep - 1;

               $(".step-pane").removeClass("active");
               $(".step-pane[data-step='" + previousStep + "']").addClass("active");

               $(".step[data-step='" + currentStep + "']").removeClass("active");
               $(".step[data-step='" + previousStep + "']").addClass("active");
           });

           $(".finish-step").click(function () {
               $.ajax({
                   url: '/Projects/Finish',
                   type: 'POST',
                   data: $("#step6-form").serialize(),
                   success: function (response) {
                       if (response.success) {
                           alert('Process completed successfully.');
                           window.location.href = '/Projects/Index'; // Replace with your success URL
                       } else {
                           alert('Error finalizing process: ' + response.message);
                       }
                   },
                   error: function () {
                       alert('An error occurred while finalizing the process.');
                   }
               });
           });
       });


</script>
</body>
</html>
