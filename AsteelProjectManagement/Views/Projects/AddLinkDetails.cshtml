@model IEnumerable<AsteelProjectManagement.Models.Links>

<div class="container">
    <fieldset class="styled-fieldset">
        <legend class="styled-legend">Link Details</legend>

        @if (Model != null && Model.Any())
        {
            foreach (var link in Model)
            {
                <div class="row link-details">
                    <div class="row">
                        <div class="projet11">
                            <div class="form-group">
                                <label class="styled-label">Project Name:</label>
                                <p class="styled-paragraph">@link.Projects.ProjectName</p> <!-- Assuming there is a navigation property 'Projects' in 'Links' model -->
                            </div>

                            <div class="form-group">
                                <label class="styled-label">URL:</label>
                                <p class="styled-paragraph">@Html.DisplayFor(modelItem => link.URL)</p>
                            </div>

                            <div class="form-group">
                                <label class="styled-label">Description:</label>
                                <p class="styled-paragraph">@Html.DisplayFor(modelItem => link.Description)</p>
                            </div>

                            <div class="form-group">
                                <label class="styled-label">Created Date:</label>
                                <p class="styled-paragraph">@Html.DisplayFor(modelItem => link.CreatedDate)</p>
                            </div>
                        </div>
                    </div>
                    <div class="projet">
                        <div class="form-group">
                            <label class="styled-label">Created By:</label>
                            <p class="styled-paragraph">@link.Users.Username</p> <!-- Assuming there is a navigation property 'Users' in 'Links' model -->
                        </div>

                        <div class="form-group">
                            <label class="styled-label">Category:</label>
                            <p class="styled-paragraph">@Html.DisplayFor(modelItem => link.Category)</p>
                        </div>
                    </div>
                </div>
                <hr class="styled-hr" />
            }
        }
        else
        {
            <p class="no-links">No links available.</p>
        }
    </fieldset>
</div>
<div class="return-link-container">
    @Html.ActionLink("Back to list ", "Index", "Projects", null, new { @class = "btn btn-secondary return-link" })
</div>
<style>
    .return-link-container {
        margin-top: 20px;
        text-align: right;
    }

    .return-link {
        font-family: 'Segoe UI', sans-serif;
        padding: 8px 16px;
        border-radius: 5px;
    }

        .return-link:hover {
            background-color: #6c757d;
            color: white;
        }
    .row {
        display: flex;
        gap: 20px; /* Espace entre les deux div */
    }

    .projet11 {
        flex: 1;
        /* Ajout d'un style si nécessaire */
    }
    .projet {
        flex: 1;
        margin-left: 450px;
        margin-top: -300px;
    }
    }
    .container {
        margin: 20px;
    }

    .styled-fieldset {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .styled-legend {
        font-size: 1.5em;
        font-weight: bold;
        color: #1ab188;
        padding: 0 10px;
    }

    .link-details {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .col-md-6 {
        flex: 1;
        padding: 10px;
        box-sizing: border-box;
    }

    .styled-label {
        font-weight: bold;
        color: #333;
    }

    .styled-paragraph {
        font-size: 1em;
        color: #666;
        margin-bottom: 10px;
    }

    .styled-hr {
        border: 0;
        border-top: 1px solid #ddd;
        margin: 20px 0;
    }

    .no-links {
        font-size: 1.2em;
        color: #999;
        text-align: center;
    }

</style>