@model AsteelProjectManagement.Models.EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Profile/EditProfile.css">
    <title>Edit Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .containerrrr {
            display: flex;
            justify-content: space-between;
            padding: 20px;
        }

        .profile-edit {
            flex: 1;
            max-width: 45%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .profile-info {
            flex: 1;
            max-width: 45%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            height: 300px;
            display: block;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group input[type="email"],
            .form-group input[type="password"] {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group input[type="submit"] {
                background-color: #1ab188;
                color: #fff;
                border: none;
                padding: 10px 15px;
                border-radius: 4px;
                cursor: pointer;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #148d70;
                }

        .profile-info h1,
        .profile-info h2 {
            margin: 0;
            padding: 0;
            text-align: center;
            color: #1ab188;
        }

        .profile-info p {
            margin: 0;
            padding: 0;
            text-align: center;
            font-size: 18px;
        }

        .h2 {
            margin: 0;
            padding: 0;
            text-align: center;
            color: #1ab188;
        }
    </style>    
</head>
<body>
    <div class="containerrrr">
        <div class="profile-edit">
            <h2>Edit Profile</h2>
            @using (Html.BeginForm("EditProfil", "EditProfil", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Username)
                    @Html.EditorFor(m => m.Username)
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.EditorFor(m => m.FirstName)
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName)
                    @Html.EditorFor(m => m.LastName)
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.EditorFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Role)
                    @Html.EditorFor(m => m.Role)
                    @Html.ValidationMessageFor(m => m.Role)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PasswordHash)
                    @Html.PasswordFor(m => m.PasswordHash)
                    @Html.ValidationMessageFor(m => m.PasswordHash)
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
        <div class="profile-info">
            <h1>Informations</h1>
            <h2>Welcome, @Model.Username</h2>
            <p>Email: @Model.Email</p>
            <p>First Name: @Model.FirstName</p>
            <p>Last Name: @Model.LastName</p>
            <p>Role: @Model.Role</p>
            <p>Date Joined: @Model.DateJoined</p>
        </div>
    </div>
</body>
</html>
